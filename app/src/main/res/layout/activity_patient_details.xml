<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientDetailsActivity">

    <TextView
        android:id="@+id/dob"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="48dp"
        android:text="TextView"
        android:background="@android:color/transparent"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/listview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/dobPlainText"
        app:layout_constraintTop_toBottomOf="@+id/gender" />

    <TextView
        android:id="@+id/gender"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/dob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toEndOf="@+id/genderPlainText"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <TextView
        android:id="@+id/name"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/namePlainText"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintVertical_bias="0.657" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="409dp"
        android:layout_height="607dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:listSelector="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doctorsvisitedPlainText" />

    <EditText
        android:id="@+id/doctorsvisitedPlainText"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:text="Doctors visited:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dobPlainText"
        android:layout_width="114dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:text="Date of Birth :"
        app:layout_constraintBottom_toTopOf="@+id/doctorsvisitedPlainText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/genderPlainText"
        android:layout_width="75dp"
        android:layout_height="43dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:text="Gender :"
        app:layout_constraintBottom_toTopOf="@+id/dobPlainText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/namePlainText"
        android:layout_width="72dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:text="Name :"
        app:layout_constraintBottom_toTopOf="@+id/genderPlainText"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/usernamePlainText"
        android:layout_width="104dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:text="Username :"
        app:layout_constraintBottom_toTopOf="@+id/namePlainText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7"
        app:layout_constraintVertical_bias="0.822" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="118dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#9560EF"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:text="Patient Info"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/username"
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="10dp"
        android:foregroundTint="#FFFFFF"
        android:background="@android:color/transparent"
        android:textAlignment="viewStart"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toEndOf="@+id/usernamePlainText"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName7" />

    <EditText
        android:layout_height="39dp"
        android:layout_width="151dp"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:text="Patient Info"
        android:layout_marginStart="16dp"
        android:id="@+id/info"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:ems="10"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:inputType="none"
        android:background="@android:color/transparent"
        android:layout_marginEnd="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>